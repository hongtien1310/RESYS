@using System.Configuration;
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        @Html.CanonicalUrl()
        @Html.Partial("HtmlMeta")
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width,initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

        <meta property="fb:app_id" content="">
        <meta property="og:url" content="">
        <meta property="og:title" content="">
        <meta property="og:description" content="">
        <meta property="og:image" content="">
        <meta property="og:image:url" content="">
        <meta property="og:image:width" content="600">
        <meta property="og:image:height" content="320">
        <meta property="og:site_name" content="rever.vn">
        <meta property="og:rich_attachment" content="true">
        <meta property="og:type" content="article">
        <style>
            picture img {
                display: inline-block;
                vertical-align: middle;
            }
        </style>
        <style type="text/css">
            .gm-style {
                font: 400 11px Roboto, Arial, sans-serif;
                text-decoration: none;
            }

                .gm-style img {
                    max-width: none;
                }
        </style>
        @if (ConfigurationManager.AppSettings["Environment"] == "local")
        {
            <link href="@Url.VersionedContent(@"~/Assets/dist/css/home.css")" rel="stylesheet" />
            <script src="@Url.VersionedContent(@"~/Assets/dist/js/home.js")"></script>
        }
        else
        {
            <link href="@Url.VersionedContent(@"~/Assets/dist/css/home.min.css")" rel="stylesheet" />
            <script src="@Url.VersionedContent(@"~/Assets/dist/js/home.min.js")"></script>
        }
        
    </head>
    <body >
        <div id="wrap">
            @Html.Partial("Header")
            @RenderBody()
            @Html.Partial("Footer")
            <script type="text/javascript">
                jQuery(document).ready(function () {
                    App.init();
                    App.initParallaxBg();
                    StyleHotLine.initStyleHotLine();

                    var info = $(".infomation-custom").niceScroll({ touchbehavior: true, cursorcolor: "#6b6b6b", cursoropacitymax: 0.6, cursorwidth: 8 });
                    var nicesx = $(".boxscroll").niceScroll({ touchbehavior: true, cursorcolor: "#6b6b6b", cursoropacitymax: 0.6, cursorwidth: 8 });

                });
            </script>
        </div>
            
            @if (UserState != null && UserState.SysUser.HasPermission("SEO"))
            {
                @Html.Partial("UrlPageInfoEdit")
            }
</body>
</html>
